 <script>
    let listProducts = [];
    {{#each Products}}
            temp = {
                    Product_ID : `{{this.Product_ID}}`,
                    Product_Name: `{{this.Product_Name}}`,
                    Product_Price: `{{this.Product_Price}}`,
                    Product_Unit: `{{this.Product_Unit}}`,
                }
            listProducts.push(temp)
    {{/each}}
 </script>