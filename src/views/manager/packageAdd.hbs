    <div class="col-9" style="flex:1;">
        <div class="section general-information">
                    <div class="section-title">
                        Thêm gói nhu yếu phẩm mới
                    </div>
                    <div class="section-content mt-4">
                        <div class="information">
                            <form action="/manager/packageEdit/add" method="post">
                                <div class="mb-3" style="margin-bottom: 2rem!important;">
                                    <label for="username" class="form-label" style="font-weight: 500;">Tên gói nhu yếu phẩm</label>
                                    <input type="text" class="form-control" name="P_Name" id="username" style="padding:.6rem; font-size:1.4rem">
                                </div>
                                <div class="mb-3" style="margin-bottom: 2rem!important;">
                                    <label for="fullname" class="form-label" style="font-weight: 500;">Giới hạn</label>
                                    <input type="number" min="1" onkeydown="return false" class="form-control" name="P_Limit" id="fullname" style="padding:.6rem; font-size:1.4rem">
                                </div>
                                <div class="mb-3" style="margin-bottom: 2rem!important;">
                                    <label for="idcard" class="form-label" style="font-weight: 500;">Link hình ảnh của gói</label>
                                    <input type="text" class="form-control" name="P_Image" id="idcard" style="padding:.6rem; font-size:1.4rem">
                                </div>
                                <div class="mb-3" style="margin-bottom: 2rem!important;">
                                    <label for="birthdate" class="form-label" style="font-weight: 500;">Loại gói </label>
                                    <input type="text" class="form-control" id="birthdate" name="P_Type" style="padding:.6rem; font-size:1.4rem">
                                </div>
                                <div class="mb-3" style="margin-bottom: 2rem!important;">
                                    <label for="P_Quantity" class="form-label" style="font-weight: 500;">Số lượng sản phẩm trong gói</label>
                                    <input type="number" min="1" value="1" onkeydown="return false" class="form-control" name="P_Quantity" id="P_Quantity" style="padding:.6rem; font-size:1.4rem">
                                </div>
                                <div class="mb-5" style="margin-bottom: 2rem!important;">
                                    <label for="relatedpeople" class="form-label" style="font-weight: 500;">Danh sách sản phẩm</label>
                                    <!-- <input type="text" class="form-control" name="quarantineaddress" id="quarantineaddress" value="123 Đường 456, P. 789, Q10, TP HCM" readonly style="padding:.6rem; font-size:1.4rem"> -->
                                    <div class="products">
                                        <div class="d-flex my-3">
                                            <select type="text" class="form-select d-inline-block me-3" name="P_ProductsID"  style="padding:.6rem; font-size:1.3rem; flex:3;">
                                                {{#each Products}}
                                                <option value="{{this.Product_ID}}">{{this.Product_Name}}</option>
                                                {{/each}}
                                            </select>
                                            <input type="number" min="1" class="form-control d-inline-block" name="P_ProductsLimit" placeholder="Số sản phẩm tối đa" onkeydown="return false" style="padding:.6rem; font-size:1.4rem; flex:1;">
                                        </div>
                                    </div>
                                </div>
                                <div class="mb-3" style="margin-top: 2rem!important;">
                                    <button type="submit" class="btn submit" style="float: right; width:20rem;">Thêm </button>
                                </div>
                            </form>
                        </div>
                    </div>
        </div>
   
