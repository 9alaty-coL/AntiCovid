            <h1 class="mx-5 mb-5"><i class="fa fa-list-ul"></i> Chi tiết thông tin: </h1>
            <div class="container">
                <div class="row no-gutter">
                    {{#with user}}
                    <div class="col-8">
                        <div class="card mb-3 me-3" style="min-height: 160px;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <h1><b>Họ và tên:</b></h1>
                                    </div>
                                    <div class="col-9">
                                        <h1 class="card-title">{{P_FullName}}</h1>
                                    </div>
                                    <div class="col-3">
                                        <h3><b>CMND/CCCD:</b></h3>
                                    </div>
                                    <div class="col-9">
                                        <h3 class="card-title">{{P_IdentityCard}}</h3>
                                    </div>
