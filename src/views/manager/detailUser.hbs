                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    {{#with user}}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h1 class="mb-4"><b>Chuyển nơi điều trị / cách ly:</b></h1>
                            <form action="/manager/detail/UserID={{P_ID}}/changeLocation?_method=PUT" method="post" id="ChangeLocationForm">
                                <div class="input-group">
                                    <span id="Time" class="form-control text-form text-center" style="width: 10%;"></span>
                                    <div class="form-control form-control-dark text-form search-packet no-gutter" style="width: 55%;">
                                        <div class="d-inline-block" style="width: 100%; height: 100%; position: relative;">
                                            <input name="location" autocomplete="off" type="text" id="searchBarTreatPlace" class="form-control search-input" placeholder="Vị trí chuyển đến">
                                            <input name="location_id" type="number" id="IDsearchBarTreatPlace" value="0" hidden>
                                        </div>
                                        <ul class="search-menu" id="menuBarTreatPlace"></ul>
                                    </div>
                                    <button class="btn btn-outline-info text-form" type="submit" style="width: 15%;">Hoàn tất</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    {{/with}}
                </div>
                <div class="row">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h1 class="mb-4"><b>Danh sách người liên đới với người nầy:</b></h1>
                            {{#each relates}}
                            <div class="card mb-1 user-card"
                                onclick="window.location='/manager/detail/UserID={{this.P_ID}}'">
                                <div class="row card-body h-100" style="min-height: 70px;">
                                    <span class="col-2 border-end border-dark border-2"> {{this.P_FullName}}</span>
                                    <span
                                        class="col-1 border-end border-dark border-2 text-center">{{this.P_IdentityCard}}</span>
                                    <span
                                        class="col-1 border-end border-dark border-2 text-center">{{this.P_YearOfBirth}}</span>
                                    <span class="col-4 border-end border-dark border-2">{{this.P_Address}}</span>
                                    <span
                                        class="col-1 border-end border-dark border-2 text-center status">{{this.P_Status}}</span>
                                    <span class="col-3">{{this.P_TreatmentPlace}}</span>
                                </div>
                            </div>
                            {{else}}
                            <p class="card-text">Không có người nào liên đới với người nầy cả</p>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
