                                {{#each userLocationHistory}}
                                <div class="mb-1">
                                    <div class="row mb-3">
                                        <span class="col-3"><i class="fa fa-calendar"></i> {{this.Time}}</span>
                                        <span class="col-7"><i class="fa fa-home"></i> {{this.HospitalLocation}}</span>
                                    </div>
                                </div>
                                {{else}}
                                <p class="card-text">Người nầy chưa được quản lý chuyển đi nơi nào cả.</p>
                                {{/each}}
                            </div>

                            <h1 class="my-4"><b>Chuyển nơi điều trị / cách ly:</b></h1>
                            <form>
                                <div class="input-group">
                                    <input name="Time "type="text" class="form-control text-form" placeholder="Thời gian chuyển" style="width: 20%;">
                                    <input name="HospitalLocation" type="text" class="form-control text-form" placeholder="Vị trí chuyển đến" style="width: 60%;">
                                    <button class="btn btn-outline-info text-form" type="button" style="width: 20%;">Hoàn tất</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
