    <div class="col-9" style="flex:1;">
        <div class="section general-information">
            <h1 class="mx-5 mb-5"><i class="fa fa-list-ul"></i> Chi tiết thông tin: </h1>
            <div class="container">
                {{#with user}}
                <div class="row no-gutter">
                    <div class="col-8">
                        <div class="card mb-3 me-3" style="min-height: 160px;">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-3">
                                        <h1><b>Họ và tên:</b></h1>
                                    </div>
                                    <div class="col-9">
                                        <h1 class="card-title">{{P_FullName}}</h1>
                                    </div>
                                    <div class="col-3">
                                        <h3><b>CMND/CCCD:</b></h3>
                                    </div>
                                    <div class="col-9">
                                        <h3 class="card-title">{{P_IdentityCard}}</h3>
                                    </div>
                                    <div class="col-3">
                                        <p class="card-text">Địa chỉ nơi ở:</p>
                                    </div>
                                    <div class="col-9">
                                        <p class="card-text">{{P_Address}}</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-3">
                                        <p class="card-text">Trạng thái điều trị:</p>
                                    </div>
                                    <div class="col-9">
                                        <p class="card-text" id="LeftStatus">{{P_Status}}</p>
                                    </div>
                                    <div class="col-3">
                                        <p class="card-text">Cơ sở điều trị / cách ly:</p>
                                    </div>
                                    <div class="col-9">
                                        <p class="card-text" id="CurrentTreatPlaceName">{{P_TreatmentPlace}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="card mb-3" style="min-height: 160px;">
                            <div class="card-body h-100">
                                <h1><b>Chỉnh sửa thông tin trạng thái: </b></h1>
                                <form action="/manager/detail/UserID={{P_ID}}/changeStatus?_method=PUT" method="POST"
                                    id="ChangeStatusForm">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="mb-3 w-100">
                                                <label for="from" class="form-label text-form ">Hiện tại đang
                                                    là:</label>
                                                <input type="text" id="from" class="form-control text-center text-form"
                                                    placeholder="{{P_Status}}" value="{{P_Status}}" name="from"
                                                    readonly>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3 w-100">
                                                <label for="to" class="form-label text-form ">Chỉnh sửa
                                                    thành:</label>
                                                <select id="to" class="form-select text-center text-form " name="to">
                                                    <option id="Null" class="text-form" value="" selected disabled></option>
                                                    {{#ifStr P_Status 'F0'}}
                                                    <option class="text-form" value="F4">Khỏi bệnh</option>
                                                    {{/ifStr}}
                                                    {{#ifStr P_Status 'F1'}}
                                                    <option class="text-form" value="F0">F0</option>
                                                    {{/ifStr}}
                                                    {{#ifStr P_Status 'F2'}}
                                                    <option class="text-form" value="F0">F0</option>
                                                    <option class="text-form" value="F1">F1</option>
                                                    {{/ifStr}}
                                                    {{#ifStr P_Status 'F3'}}
                                                    <option class="text-form" value="F0">F0</option>
                                                    <option class="text-form" value="F1">F1</option>
                                                    <option class="text-form" value="F2">F2</option>
                                                    {{/ifStr}}
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <button type="button" class="btn btn-warning w-100"
                                                onclick="cancelChange();">Hủy bỏ chỉnh sửa</button>
                                        </div>
                                        <div class="col-6">
                                            <button type="submit" class="btn btn-success w-100" id="submitBtn" disabled>Hoàn tất chỉnh
                                                sửa</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/with}}
            </div>
            <div class="container">
                <div class="row">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="border-bottom border-dark border-3 mb-3">
                                <div class="row">
