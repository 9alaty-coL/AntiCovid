                                        <span style="width: 55%;"><i class="fa fa-medkit"></i> {{this.Activity}}</span>
                                        <span style="width: 25%;"><i class="fas fa-user"></i> {{this.Manager}}</span>
                                    </div>
                                </div>
                                {{else}}
