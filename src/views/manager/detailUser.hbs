                    <div class="col-4">
                        <div class="card mb-3" style="min-height: 160px;">
                            <div class="card-body h-100">
                                <h1><b>Chỉnh sửa thông tin trạng thái: </b></h1>
                                <form>
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="mb-3 w-100">
                                                <label for="Current" class="form-label text-form ">Hiện tại đang là:</label>
                                                <input type="text" id="Current" class="form-control text-center text-form"
                                                    placeholder="{{P_Status}}" value="{{P_Status}}" name="Current"
                                                    disabled>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="mb-3 w-100">
                                                <label for="Status" class="form-label text-form ">Chỉnh sửa thành:</label>
                                                <select id="Status" class="form-select text-center text-form " name="Status"
                                                    onclick="if (typeof(this.selectedIndex) != 'undefined') changeStatusRelate(this.selectedIndex)">
                                                    <option class="StaOp text-form ">F0</option>
                                                    <option class="StaOp text-form ">F1</option>
                                                    <option class="StaOp text-form ">F2</option>
                                                    <option class="StaOp text-form ">F3</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-6">
                                            <button type="button" class="btn btn-warning w-100"
                                                onclick="resetStatus();">Hủy bỏ chỉnh sửa</button>
                                        </div>
                                        <div class="col-6">
                                            <button type="button" class="btn btn-success w-100">Hoàn tất chỉnh
                                                sửa</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {{/with}}
