  <div class="content">
           <div class="container-fluid" style="background-color: white;">
                <div class="row">
                    <div class="col-5">
                        <div class="big-img mb-4">
                            <img class="big" src="{{currPackage.P_Image}}" alt="" style="width: 100%; height: 500px;">
                        </div>
                        <ul class="img-list d-flex" style="padding: 0;">
                           <div class="row">
                                <li class="col-3"> 
                                    <img class="small mb-2" src="{{currPackage.P_Image}}" alt="" style="width: 120px; height: 120px; ">
                                </li>
                                {{#each productsInPackage}}
                                <li class="col-3"> 
                                    <img class="small mb-2" src="{{this.Product_MainImage}}" alt="" style="width: 120px; height: 120px; ">
                                </li>
                                {{/each}}
                            </div>
                        </ul>
                    </div>
                    <div class="col-7">
                       <form action="/user/package/{{currPackage.P_ID}}" method="post">
                        <div class="packet-title mb-4">
                            <div class="box">AntiCovid+</div>  {{currPackage.P_Name}}
                        </div>

                        <ul class="products-list mb-5" style="padding: 0; font-size: 2rem;"> Bao gồm:
                            {{#each productsInPackage}}
                            <li class="product">
                                <div class="row">
                                    <div class="col-7 product-desc ">
                                       <a href="/manager/product/{{this.Product_ID}}">
                                            <div class="d-inline-block">
                                                <img src="{{this.Product_MainImage}}" alt="" class="me-2" style="width: 60px; height: 60px;">    
                                            </div>
                                            <div class="d-inline-block " style="width:32rem;">
                                                {{this.Product_Name}} : {{this.Product_Price}}đ/{{this.Product_Unit}} 
                                            </div>
                                        </a>
                                    </div>
                                    <div class="col-5 product-quantity ">
                                        Số lượng mua tối đa: {{this.Product_Limit}} {{this.Product_Unit}} 
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>

                           
                           
                        
                       </form>
                        
                    </div>
                </div>
           </div>
        </div>