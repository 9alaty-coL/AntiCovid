     <div class="col-9" style="flex:1;">
                 <div class="section packet-list">
                    <div class="section-title">
                        Danh sách các gói nhu yếu phẩm
                    </div>
                    <div class="option">
                        <div class="d-inline-block">
                            <label for="sort">Sắp xếp</label>
                            <select id="sort" class="form-select select-type" aria-label="Sắp xếp">
                                    <option value="" selected>Không</option>
                                    <option value="tăng">Tăng dần số lượng gói đã bán </option>
                                    <option value="giảm">Giảm dần số lượng gói đã bán </option>
                            </select>
                        </div>

                        <div class="d-inline-block">
                            <label for="filter">Lọc theo</label>
                            <select id="filter" class="form-select select-type" aria-label="Lọc theo">
                                    <option value="" selected>Tất cả</option>
                                    <option value="Thực phẩm">Thực phẩm</option>
                                    <option value="Thuốc men">Thuốc men</option>
                            </select>
                        </div>
                        
                        
                    </div>

                    <div class="section-content mb-5 mt-2 me-2">
                        <div class="row">
                            {{#each listOfPackages}}
                            <div class="col-3 my-3">
                                <div class="card" style="width: 100%; box-shadow: 0 2px 4px rgba(0, 0, 0, .15), 0 8px 16px rgba(0, 0, 0, .15);">
                                    <img src="{{this.P_Image}}" class="card-img-top" height="200" alt="...">
                                    <div class="card-body">
                                      <h4 class="card-title">{{this.P_Name}}</h4>
                                      <p class="card-text text-ellipsis--2 fs-5" style="height: 40px;">Bao gồm:
                                          {{#each this.Product_List}}
                                            {{this}},  
                                          {{/each}}
                                      </p>
                                      <p class="card-text d-flex flex-row-reverse" style="color: red; font-style:italic; font-size: 1.2rem!important;">
                                          Đã bán: {{this.P_SoldQuantity}}
                                      </p>
                                      <a href="/manager/package/{{this.P_ID}}" class="btn btn-primary fs-4">Xem chi tiết </a>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                 
                        </div>
                    </div>
                </div>
