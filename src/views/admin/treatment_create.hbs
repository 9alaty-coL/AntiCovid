<div class="content row">

    {{!-- sidebar --}}
<div class="sidebar">
    <div class="sidebar-item">
        <div class="title">
            <span class="angle-right"><i class="fas fa-angle-right"></i> </span>
            <span class="angle-đown d-none"><i class="fas fa-angle-down"></i> </span>
            Quản lý
        </div>
        <ul class="list">
            <li class="list-item ">
                <a class="d-block" href="/admin"><i class="fas fa-home"></i> Trang chủ</a>
            </li>
            <li class="list-item">
                <a class="d-block" href="/admin/create"><i class="fas fa-user"></i> Tạo tài khoản</a>
            </li>
            <li class="list-item">
                  <a class="d-block" href="/admin/manage"><i class="fas fa-cog"></i> Quản lý manager</a>
            </li>
            <li class="list-item active">
                <a class="d-block" href="/admin/treatment"><i class="fas fa-hospital"></i> Địa điểm cách ly</a>
            </li>
        </ul>
    </div>
</div>
    {{!-- end sidebar --}}

    <div class="col-9" style="flex:1;">
        <div class="section">
            <div class="row" style="margin: auto">
                <div class="col-1">
                    <a href="/admin/treatment" class="btn btn-danger">back</a>
                </div>
                <div class="col-8 mt-5">

                    <div class="input">
                                    
                        <form action="/admin/treatment/create" method="post">
                            <div class="card info">
                                <div class="card-header bg text-white m-auto w-100">
                                    Thêm khu điều trị
                                </div>
                                <div class="mt-3">
                                    <div class="input-group">
                                        <input type="text" name="name" class="form-control" id="inlineFormInputGroup"  placeholder="Tên khu điều trị">
                                    </div>
                                </div>
                                <div class=" mt-3">
                                    <div class="input-group">
                                        <input type="number" name="capacity" class="form-control" id="inlineFormInputGroup"  placeholder="Sức chứa">
                                    </div>
                                </div>
                                <div class=" mt-3">
                                    <div class="input-group">
                                        <input type="number" name="current" class="form-control" id="inlineFormInputGroup"  placeholder="Số lượng đang tiếp nhận">
                                    </div>
                                </div>

                                <div class=" mt-3">
                                    <button type="submit" class="btn btn-warning">Thêm</button>
                                </div>
                                {{#if message}}
                                <div class="alert alert-{{color}} col-auto p-2 m-3 flash" role="alert">
                                    {{message}}
                                </div>
                                {{/if}}
                                <div class="line"></div>

                                <div class="second">
                                    <img src="https://medcitynews.com/uploads/2021/08/hospital-clinic-tech-concept-600x300.jpg" alt="">
                                </div>

                            </div>
                        </form>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>



